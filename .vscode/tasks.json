{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch", // Used by "Launch Extension" in launch.json
            "type": "npm",
            "script": "watch",
            "problemMatcher": [],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "test",
            "type": "npm",
            "script": "test",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "compile-nobundle"
        },

        {
            "label": "compile-nobundle",
            "type": "npm",
            "script": "compile-nobundle",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "hide": true,
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

        {
            "label": "Clean SonarLint Problems",
            "type": "shell",
            "command": "echo Cleaning problems...",
            "group": "none",
            "problemMatcher": {
                "pattern": {
                    "regexp": "a^"
                },
                "owner": "sonarlint" // Right-click/copy to get the owner
            }
        }
    ]
}